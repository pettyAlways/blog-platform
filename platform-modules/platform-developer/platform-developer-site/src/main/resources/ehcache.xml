<?xml version="1.0" encoding="UTF-8"?>
<ehcache name="cms_cache">
    <defaultCache
            eternal="false"
            maxElementsInMemory="1000"
            overflowToDisk="false"
            diskPersistent="false"
            timeToIdleSeconds="0"
            timeToLiveSeconds="600"
            memoryStoreEvictionPolicy="LRU" />

    <!-- 系统常用量 -->
    <cache
            name="constCache"
            eternal="true"
            maxElementsInMemory="1000"
            overflowToDisk="false"
            diskPersistent="false"
            memoryStoreEvictionPolicy="LRU" />

    <!-- 登录次数限制 -->
    <cache
            name="LoginRetry"
            eternal="true"
            maxElementsInMemory="1000"
            overflowToDisk="false"
            diskPersistent="false"
            memoryStoreEvictionPolicy="LRU" />

    <!-- 资源访问缓存-->
    <cache
            name="resourceCache"
            eternal="false"
            maxElementsInMemory="1000"
            overflowToDisk="false"
            diskPersistent="false"
            timeToIdleSeconds="1600"
            timeToLiveSeconds="1600"
            memoryStoreEvictionPolicy="LRU" />

    <cache
            name="shiroCache"
            eternal="false"
            maxElementsInMemory="1000"
            overflowToDisk="false"
            diskPersistent="false"
            timeToIdleSeconds="0"
            timeToLiveSeconds="0"
            memoryStoreEvictionPolicy="LRU" />
</ehcache>
